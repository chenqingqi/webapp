/**
 * 导入模块样式
 */
@import '/modules/style.less';
@import '/modules/title/white/title.less';
@import '/modules/tip/logout/logout.less';
@import '/app/bind_end/tip/unbind_tip.less';
@import '/modules/tip/simple/tip.less';

/**
 * 主页面样式 
 */
body
{
    background-color: #FFF;
}

#content
{
    #first_name,#next_name
    {
        width: 640px;
        height: 80px;
        margin-top: 80px;
        
        font-size: 30px;
        text-align: center;
        line-height: 80px;
        color: #999;
    }
    
    #next_name
    {
        margin-top: 20px;
    }
    
   #first_account,#next_account
    {
        width: 560px;
        height: 80px;
        margin-left: 40px;
        border-radius: 80px;
        border: 1px solid #999;
        
        img
        {
            float: left;
            width: 70px;
            height: 70px;
            margin: 5px 0 0 6px;
            border-radius: 50%;
        }
        
        p
        {
            width: 480px;
            height: 88px;
            
            line-height: 80px;
            font-size: 30px;
            text-indent: 15px;
            color: #000;
        }
    }
    
    #next_account
    {
        border: 1px solid red;
        
        p
        {
            color: red;
        }
    }
    
    #icon
    {
        width: 640px;
        height: 120px;
        text-align: center;
        
        img
        {
           width: 70px;
           height: 70px;
           margin-top: 35px;
        }
    }
    
    #info
    {
        width: 560px;
        margin-left: 40px;
        padding: 15px 0 15px 5px;
        
        line-height: 42px;
        font-size: 24px;
        text-indent: 5px;
        color: #FF7474;
    }
    
    #button
    {
        width: 640px;
        height: 124px;
        background-image: url(/resource/button_radius_red.png);
        background-size:640px 124px;
        
        position: fixed;
        bottom: 0px;
        
        text-align: center;
        line-height: 140px;
        color: #FFF;
        font-size: 32px;
    }
    
    #button:hover
    {
        -webkit-filter:brightness(90%);
                filter:brightness(90%);
    }
}

